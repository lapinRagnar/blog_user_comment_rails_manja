<% if current_user %>  
  

  <%= link_to "Editer votre compte", edit_user_registration_path(current_user) , class: "btn btn-primary mb-5"%>

  <div class="div">
    <%= image_tag(current_user.avatar_thumbnail)%>
  </div>

  <div class="card">

    <div class="card-header">
      <h4>Mes infos</h4>
    </div>

   <div class="card-body">

    <p class="card-text" >
      Pseudo : <%= current_user.username ? current_user.username : "Rien" %>
    </p>

    <p class="card-text" >
      Nom: <%= current_user.first_name ? current_user.first_name : "Rien" %>
    </p>

    <p class="card-text" >
      Prenom: <%= current_user.last_name ? current_user.last_name : "rien" %>
    </p>

    <p class="card-text" >
      Lieu: <%= current_user.location ? current_user.location : "rien" %>
    </p>

    <p class="card-text" >
      Role: <%= current_user.role ? current_user.role : "Rien" %>
    </p>


    <p class="card-text" >
      Email: <%= current_user.email %>
    </p>

   </div>
  </div>




<% elsif @users %>

  <p>T'es pas connacté!</p>
  <h3>Les Utulisateurs recents</h3>

  <%= " Nb total d'abonnée : " + @users.count.to_s %>  

  <% @users.each do |u| %>
      <div >       
        <% if u.avatar.attached? %>
          <image src="<%= url_for(u.avatar) %> " width="50" height="auto" class="img_avatar_rounded" > <%= u.username  %> 
        <% end %>    
      </div>
  <% end %>


<% end %>