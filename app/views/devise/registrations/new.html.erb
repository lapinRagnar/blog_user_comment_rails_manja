<div class="card border-dark mb-3" style="max-width: 40rem;">

    <div class="card-header">
        <h2>Sign up</h2>
    </div>

    <div class=" card-body text-dark ">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <% if resource.avatar.attached? %>
              <%= "image_tag(resource.avatar)" %>
              <image src="<%= url_for(@post.image) %> " width="600" height="auto" >
            <% else %>
              <%= image_tag("/default_profile.jpg") %>
            <% end %>

          </div>

          <div class="form-group mb-3">
            <%= f.label :email, class: "form-field" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-field" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, class: "form-field" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="justify-content-center align-items-center d-flex mt-5 mb-3">
            <%= button_tag :submit , class: "btn btn-success", style: " width: 200px "  do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </div>
        <% end %>
        
      <%= render "devise/shared/links" %>

    </div>    


</div>
