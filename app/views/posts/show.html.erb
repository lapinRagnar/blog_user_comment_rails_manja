<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<%= form_with model: [@post, @comment], local: true do |f| %>

  <%= f.text_field :body %>

  <%= f.submit "Commenter" %>

<% end %>

<% @comments.each do |comment| %>

  [ <%= comment.created_at.strftime("%R:%S -%a -%b -%Y") %> ] <%= comment.user.username %>: <%= comment.body %> <br>

<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
