
<% if @post.image.attached? %>
  <image src="<%= url_for(@post.image) %> " width="600" height="auto" >
<% end %>


<div class="card ">

  <p class="card-header" >
    <strong> <%= @post.title %> </strong>  
  </p>

  <p class="card-body" >
    <%= @post.body %>
  </p>

</div>

<div id="comment_pane">
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
</div>

