
<% if current_user %>

  <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete %>

<% else %>

  <%= link_to "creer un compte", new_user_registration_path %>
  <%= link_to "Se connecter", new_user_session_path %>

<% end %>



<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td>( <%= pluralize(post.comments.count, "commentraire") %> )</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
