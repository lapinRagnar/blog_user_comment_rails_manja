<h1>Bienvenue sur mon Super Blog</h1>

<ul class="list-group ">

  <% @posts.each do |p| %>

    <% if p.image.attached? %>
      <image src="<%= url_for(p.image) %> " width="200" height="auto" >
    <% end %>    

    <li class="list-group list-group-item mt-4">
      <%= p.title%> |
        par .....         
        &&         
       ( <%= pluralize(p.comments.count, "comment") %> )
    </li>
    <li class="list-group-item p-4">
      <%= truncate(strip_tags(p.body.to_s), length: 200){ link_to "La suite...", p} %>
    </li>

    <li class="list-group-item mb-4">
      foot ............. vote (*****) crée par Nom du créateur
    </li>
  <%end%>

</ul>

<br> 
